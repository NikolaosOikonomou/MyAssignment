@model MyAssignment.Models.Manager
@using MyAssignment.Models
@using MyAssignment.Models.Enums

@{
    ViewBag.Title = "Create";
}

<h2>New Manager</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.EditorFor(m => m.FirstName, new { HtmlAttributes = new { @class = "form-control", placeholder = "Firstname" } })
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.EditorFor(m => m.LastName, new { HtmlAttributes = new { @class = "form-control", placeholder = "Lastname" } })
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.EditorFor(m => m.Age, new { HtmlAttributes = new { @class = "form-control", placeholder = "Age", } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Salary)
        @Html.EditorFor(m => m.Salary, new { HtmlAttributes = new { @class = "form-control", placeholder = "Salary", } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Country)
        @Html.EnumDropDownListFor(m => m.Country, "Nationality", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="employees">Select Manager</label>
        <select id="employees" name="employeeIds" class="form-control" multiple>
            @foreach (var item in ViewBag.Employees as List<Employee>)
            {
                <option value="@item.Id">@item.LastName</option>
            }

        </select>
    </div>

    <input type="submit" value="Create" class="btn btn-success" />
    <a href="/Manager/Create" class="btn btn-primary">Reset</a>
    @Html.ActionLink("Back", "Index", "", new { @class = "btn btn-primary" })

</form>
<style>
    .form-control {
        text-transform: capitalize;
    }
</style>


